<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user ,url: user_path(@user), method: :patch do |f| %>
        <label for="user_name">Name</label><br>
        <%= f.text_field :name %><br>
        <label for="user_image">Image</label><br>
        <%= f.file_field :profile_image %><br>
        <label for="user_introduction">Introduction</label><br>
        <%= f.text_area :introduction %><br>
        <%= f.submit "Update user", class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>